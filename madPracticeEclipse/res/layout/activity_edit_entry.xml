<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".EditEntryActivity" >

    <LinearLayout
        android:id="@+id/layoutEntryDesc"
        android:layout_width="match_parent"
        android:weightSum="1"
        android:orientation="horizontal"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textViewEntryDesc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Description: "
            android:layout_weight=".4"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editTextEntryDesc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".6"
            android:layout_toRightOf="@id/textViewEntryDesc"
            android:text="blah" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutEntryAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutEntryDesc"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:weightSum="1" >

        <TextView
            android:id="@+id/textViewEntryAmount"
            android:layout_width="0dp"
            android:layout_weight=".4"
            android:layout_height="wrap_content"
            android:text="Amount: "
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editTextEntryAmount"
            android:layout_width="0dp"
            android:layout_weight=".55"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/textViewEntryAmount"
            android:text="blah" />

        <TextView
            android:id="@+id/textViewEntryEuro"
            android:layout_width="0dp"
            android:layout_weight=".05"
            android:layout_height="wrap_content"
            android:text="â‚¬"
            android:textSize="20sp" />
    </LinearLayout>

</RelativeLayout>